{
  "name": "vue-marquee-text-component",
  "version": "2.0.1",
  "description": "[CSS GPU Animation] Marquee Text for vuejs",
  "author": "EvodiaAut <evodia.aut@gmail.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --dest dist --target lib --name MarqueeText src/components/MarqueeText.vue && vue-cli-service build --dest docs",
    "lint": "vue-cli-service lint"
  },
  "main": "dist/MarqueeText.common.js",
  "module": "dist/MarqueeText.common.js",
  "unpkg": "dist/MarqueeText.umd.min.js",
  "dependencies": {
    "core-js": "^3.18.0",
    "vue": "^3.2.19"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.2.19",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "bootstrap": "^4.1.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.18.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "ignorePatterns": [
      "**/*.d.ts"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/html-button-has-type": [
        "error",
        {
          "button": true,
          "submit": true,
          "reset": true
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ],
      "vue/component-name-in-template-casing": [
        "error",
        "PascalCase",
        {
          "registeredComponentsOnly": false
        }
      ],
      "vue/no-duplicate-attr-inheritance": [
        "error"
      ],
      "vue/no-export-in-script-setup": [
        "error"
      ],
      "vue/v-on-function-call": [
        "error"
      ],
      "vue/valid-define-props": [
        "error"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreComments": true,
          "ignoreUrls": true
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/EvodiaAut/vue-marquee-text-component/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "homepage": "https://github.com/EvodiaAut/vue-marquee-text-component",
  "keywords": [
    "vue",
    "vuejs",
    "vue2",
    "vuejs2",
    "vue-component",
    "component",
    "javascript",
    "marqueetext"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EvodiaAut/vue-marquee-text-component.git"
  }
}
